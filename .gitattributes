# Track media files with Git LFS
*.mp4 filter=lfs diff=lfs merge=lfs -text
*.mov filter=lfs diff=lfs merge=lfs -text
*.webm filter=lfs diff=lfs merge=lfs -text
*.jpg filter=lfs diff=lfs merge=lfs -text
*.jpeg filter=lfs diff=lfs merge=lfs -text
*.png filter=lfs diff=lfs merge=lfs -text
*.gif filter=lfs diff=lfs merge=lfs -text
public/test_exercises/* filter=lfs diff=lfs merge=lfs -text
public/test_equipment/* filter=lfs diff=lfs merge=lfs -text
public/landing/exercises/* -filter -diff -merge -text

# Do not track small landing images with LFS to ensure they are served correctly in production
public/landing/*.jpg -filter -diff -merge -text
# Do not track favicon with LFS so the site favicon is served correctly in production
public/favicon.png -filter -diff -merge -text
public/landing/exercises/* !text !filter !merge !diff

# Normalize line endings for text files
* text=auto
# Enforce LF in source files (avoid CRLF warnings on Windows)
*.md text eol=lf
*.json text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.js text eol=lf
*.jsx text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.css text eol=lf
*.html text eol=lf
*.xml text eol=lf
*.jsonl text eol=lf
# End of line-ending rules
